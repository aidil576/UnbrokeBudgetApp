<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLet_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A434E"
    tools:context=".entertainment_page">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="408dp"
        android:layout_height="608dp"
        android:src="@drawable/white_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BtnMilestoneAchievement"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="16dp"
        android:text="MIlestone Achievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Rewards and Redemption"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnLuckyDraw"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Lucky Draw"
        app:layout_constraintEnd_toEndOf="@+id/BtnPointsRedemption"
        app:layout_constraintStart_toStartOf="@+id/BtnPointsRedemption"
        app:layout_constraintTop_toBottomOf="@+id/BtnPointsRedemption" />

    <Button
        android:id="@+id/BtnPointsRedemption"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:text="Points Redemption"
        app:layout_constraintEnd_toEndOf="@+id/BtnMilestoneAchievement"
        app:layout_constraintStart_toStartOf="@+id/BtnMilestoneAchievement"
        app:layout_constraintTop_toBottomOf="@+id/BtnMilestoneAchievement" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/icons8_milestone_64"
        app:layout_constraintBottom_toBottomOf="@+id/BtnMilestoneAchievement"
        app:layout_constraintEnd_toStartOf="@+id/BtnMilestoneAchievement"
        app:layout_constraintTop_toTopOf="@+id/BtnMilestoneAchievement"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/icons8_redeem_points_64"
        app:layout_constraintBottom_toBottomOf="@+id/BtnPointsRedemption"
        app:layout_constraintEnd_toStartOf="@+id/BtnPointsRedemption"
        app:layout_constraintTop_toTopOf="@+id/BtnPointsRedemption"
        app:layout_constraintVertical_bias="0.625" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/icons8_fortune_wheel_53"
        app:layout_constraintBottom_toBottomOf="@+id/BtnLuckyDraw"
        app:layout_constraintEnd_toStartOf="@+id/BtnLuckyDraw"
        app:layout_constraintTop_toTopOf="@+id/BtnLuckyDraw"
        app:layout_constraintVertical_bias="0.475" />

</androidx.constraintlayout.widget.ConstraintLayout>