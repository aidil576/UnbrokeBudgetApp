<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLlevel2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F505B"
    tools:context=".milestone_achievment_2_2">

    <ImageView
        android:id="@+id/IVrectangle_holder_trophy"
        android:layout_width="413dp"
        android:layout_height="475dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/rectangle_round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/IVtrophy"
        android:layout_width="310dp"
        android:layout_height="370dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/winner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVCongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Congrats!"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/IVtrophy"
        app:layout_constraintStart_toStartOf="@+id/IVtrophy"
        app:layout_constraintTop_toBottomOf="@+id/IVtrophy" />

    <TextView
        android:id="@+id/TVdescriptionlv1"
        android:layout_width="241dp"
        android:layout_height="47dp"
        android:layout_marginTop="50dp"
        android:text="You have unlocked level 2 and earn 500 points"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/TVCongrats"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/TVCongrats"
        app:layout_constraintTop_toBottomOf="@+id/TVCongrats" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#1F505B"
        android:text="Claim"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/TVdescriptionlv1"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/TVdescriptionlv1"
        app:layout_constraintTop_toBottomOf="@+id/TVdescriptionlv1" />
</androidx.constraintlayout.widget.ConstraintLayout>