<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ombakterm"
    tools:context=".PrivacyPolicyActivity">

    <ImageView
        android:id="@+id/IVLogo"
        android:layout_width="160dp"
        android:layout_height="142dp"
        android:layout_marginTop="72dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/walletlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVFirstTerm"
        android:layout_width="320dp"
        android:layout_height="121dp"
        android:layout_marginTop="68dp"
        android:elevation="2dp"
        android:text="1. Introduction: We are committed to protecting your privacy and personal information. This privacy policy (the &quot;Policy&quot;) explains how we collect, use, and share information about you when you use our workout app (the &quot;App&quot;)."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVLogo" />

    <TextView
        android:id="@+id/TVSecTerm"
        android:layout_width="322dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:text="2. Information we collect: We may collect the following types of information about you when you use the App:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVFirstTerm" />

    <TextView
        android:id="@+id/TVPersonInfo"
        android:layout_width="324dp"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp"
        android:text="Personal information: This includes information that can be used to identify you, such as your name, email address, and phone number."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVSecTerm" />

    <TextView
        android:id="@+id/TVDeviceInfo"
        android:layout_width="321dp"
        android:layout_height="105dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:text="Device information: This includes information about the device you use to access the App, such as the hardware model, operating system and version, and unique device identifiers."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVPersonInfo" />


    <TextView
        android:id="@+id/TVUsageInfo"
        android:layout_width="321dp"
        android:layout_height="105dp"
        android:layout_marginTop="4dp"
        android:elevation="2dp"
        android:text="    Usage information: This includes information about how you use the App, such as the features you access, the pages you visit, and the duration of your sessions.
"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVDeviceInfo" />

    <TextView
        android:id="@+id/TVJoinCommunity6"
        android:layout_width="237dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:text="Privacy and Policy"
        android:textAlignment="center"
        android:textColor="#7D4949"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>